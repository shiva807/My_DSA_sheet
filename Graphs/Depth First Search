# https://www.geeksforgeeks.org/problems/depth-first-traversal-for-a-graph/1

class Solution:
    
    def dfs(self, adj):
        n = len(adj)
        visited = [False] * n
        ans = []
        
        def helper(node):
            
            visited[node] = True
            ans.append(node)
            
            for x in adj[node]:
                if not visited[x]:
                    helper(x)
            

        
        for i in range(n):
            if not visited[i]:
                helper(i)
            
        return ans

