# https://leetcode.com/problems/combination-sum/?envType=study-plan-v2&envId=top-interview-150

class Solution:
    def combinationSum(self, candidates: List[int], target: int) -> List[List[int]]:
        n = len(candidates)
        ans = []

        def recur(indx, target, tmp):
            if(target == 0):
                ans.append(tmp.copy())
                return
            if(indx >= n):
                return
            
            if(candidates[indx] <= target):
                tmp.append(candidates[indx])
                recur(indx, target - candidates[indx], tmp)
                if(tmp):
                    tmp.pop()
                
            recur(indx+1, target, tmp)

        recur(0, target, [])
        return ans

