# https://leetcode.com/problems/valid-anagram/description/?envType=study-plan-v2&envId=top-interview-150

# Optimised soln
from collections import Counter

class Solution:
    def isAnagram(self, s: str, t: str) -> bool:
        if(len(s) != len(t)):
            return False
        
        freq = Counter(s)

        for char in t:
            if(freq[char] == 0):
                return False
            freq[char] -= 1
        
        return True



