# https://leetcode.com/problems/max-area-of-island/

class Solution:
    def maxAreaOfIsland(self, grid: List[List[int]]) -> int:
        m = len(grid)
        n = len(grid[0])
        area = 0
        max_area = 0

        def bfs(i, j):
            q = deque()
            q.append((i,j))
            grid[i][j] = 0
            area = 1

            while q:
                r,c = q.popleft()

                for dr, dc in [(-1,0), (1, 0), (0, -1), (0, 1)]:
                    nr = r + dr
                    nc = c + dc
                    if(nr >=0 and nr < m and nc >= 0 and nc < n and grid[nr][nc]):
                        area += 1
                        grid[nr][nc] = 0
                        q.append((nr, nc))

            return area

        for i in range(m):
            for j in range(n):
                if(grid[i][j]):
                    res = bfs(i, j)
                    max_area = max(max_area, res)

        return max_area

